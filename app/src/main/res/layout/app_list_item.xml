<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/app_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/app_logo"

        android:gravity="center"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_time"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bad"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="8pt"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/picL"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/bad"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/bad"
        android:background="@null"
        app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>