<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edf4fb"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/listtext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="207dp"
        android:text="Select an app above to see your friends usage of that app "
        android:textColor="#cc0000"
        android:textSize="8pt"
        android:textStyle="bold" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/actiontool"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#34b7f1"
        android:elevation="24dp"
        tools:ignore="NewApi">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/chooseapp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actiontool"
        android:gravity="center"
        android:text="Choose App here"
        android:textSize="8pt"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chooseapp"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:id="@+id/linearpane"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/fbi"
                android:tag="fbt"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/fb" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/whatsappi"
                android:tag="whatsappt"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/whatsapp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/instai"
                android:tag="instat"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/insta" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/twitteri"
                android:tag="twittert"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/twitter" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/chromei"
                android:tag="chromet"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/chrome" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/hikei"
                android:tag="hiket"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/hike" />





            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/youtubei"
                android:tag="utubet"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/youtube" />


        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/fr"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontalScrollView" >

    </ListView>

</RelativeLayout>